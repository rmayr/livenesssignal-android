<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.jku.ins.liveness.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LivenessSignal"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name="at.jku.ins.liveness.android.ui.main.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.LivenessSignal.NoActionBar" />

        <!-- setting this makes the back button go to this activity, but doesn't restore from saved state? -->
        <!--android:parentActivityName="at.jku.ins.liveness.android.ui.main.MainActivity"-->
        <activity
            android:name="at.jku.ins.liveness.android.ui.main.SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings" />

        <activity
            android:name="at.jku.ins.liveness.android.ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>